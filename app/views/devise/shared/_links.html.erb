<ul class="list-unstyled mb-0">
  <% if controller_name != 'sessions' %>
    <li><%= link_to "Entrar", new_session_path(resource_name), class: "text-primary" %></li>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <li><%= link_to "Cadastrar-se", new_registration_path(resource_name), class: "text-primary" %></li>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <li><%= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "text-primary" %></li>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <li><%= link_to "Não recebeu instruções de confirmação?", new_confirmation_path(resource_name), class: "text-primary" %></li>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <li><%= link_to "Não recebeu instruções de desbloqueio?", new_unlock_path(resource_name), class: "text-primary" %></li>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <li>
        <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "btn btn-outline-secondary btn-sm" %>
      </li>
    <% end %>
  <% end %>
</ul>
