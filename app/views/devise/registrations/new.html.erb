<h2 class="mb-4 text-center">Cadastre-se</h2>

<div class="col-md-4 mx-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :name, "Nome completo", class: "form-label" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Senha", class: "form-label" %>
      <% if @minimum_password_length %>
        <em>(mÃ­nimo <%= @minimum_password_length %> caracteres)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Confirme a senha", class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
    </div>

    <div class="d-grid">
      <%= f.submit "Cadastrar", class: "btn btn-primary btn-sm" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
