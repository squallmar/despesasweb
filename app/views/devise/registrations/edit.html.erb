<h2>Editar Conta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :name, "Nome", class: "form-label" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, "E-mail", class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="alert alert-info">
      Aguardando confirmação de: <strong><%= resource.unconfirmed_email %></strong>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :password, "Nova senha", class: "form-label" %> <small>(deixe em branco para não alterar)</small>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <div class="form-text"><%= @minimum_password_length %> caracteres no mínimo</div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, "Confirme a nova senha", class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :current_password, "Senha atual", class: "form-label" %> <small>(necessária para confirmar as mudanças)</small>
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.submit "Atualizar", class: "btn btn-primary" %>
  </div>
<% end %>

<hr />

<h3>Cancelar Conta</h3>
<p class="text-danger">Está insatisfeito? Você pode excluir sua conta abaixo.</p>

<div class="mb-3">
  <%= button_to "Cancelar minha conta", registration_path(resource_name), method: :delete, data: { confirm: "Tem certeza que deseja cancelar sua conta?" }, class: "btn btn-danger" %>
</div>

<%= link_to "Voltar", root_path, class: "btn btn-secondary" %>
